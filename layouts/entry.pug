//- entry.pug - Layout for entries/posts.
extends layout.pug

include mixin.pug

block content
  article
    div.entry-wrapper
      header.entry-header
        h2.entry-title= title
        h3.entry-meta
          if date
            = 'Written on ' + date
            br
          if publishDate
            = 'Posted on ' + publishDate
            br
          = readingTime + ' read'
          
      div.entry-content
        != contents

      +comments

block footer
  +homefooter