//- entry.pug - Layout for entries/posts.
extends layout.pug

include mixin.pug

block content
  article
    div.entry-wrapper
      header.entry-header
        h2.entry-title= title
        h3.entry-meta
          = 'Written on ' + date.format("dddd, MMMM Do, YYYY")
          br
          = readingTime + ' read'
          
      div.entry-content
        != contents
        
      script(type='text/javascript' src='/scripts/id-plugin.js')
      span#IDCommentsPostTitle(style='display: none;')  
      script(type='text/javascript' src='https://www.intensedebate.com/js/genericLinkWrapperV2.js')

block footer
  +homefooter
